<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="350dp"
                android:layout_height="475dp"
                android:background="@drawable/border"
                android:padding="5dp"
                android:layout_gravity="center"
                >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" android:layout_margin="10dp">
            android:orientation="vertical" android:layout_margin="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:text="Профил"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView8"
                    android:textAppearance="@style/title"
                    android:gravity="center" android:layout_weight="1"/>
            <TextView
                    android:id="@+id/txtclose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="X"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_weight="3" android:textAppearance="@style/title"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:text="Клас: "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/txttype" android:layout_weight="1"
                    android:textAppearance="@style/title_expandable" android:gravity="center"/>
            <TextView
                    android:text="11е"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/txtclass" android:layout_weight="1"
                    android:textAppearance="@style/title_expandable" android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:text="Известия: "
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:textAppearance="@style/title_expandable" android:gravity="center"/>
            <Switch
                    android:id="@+id/switchh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="25dp"
                    android:layout_weight="1" android:gravity="center"/>
        </LinearLayout>
        <Button
                android:text="Смяна на класа"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/changeclass" android:layout_weight="1"
                android:textAppearance="@style/title_expandable" android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/logoutBtn"
                android:text="Изход от профила"
                android:layout_weight="1"
                android:textAppearance="@style/title_expandable" android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>
    </LinearLayout>
</RelativeLayout>