<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="275dp"
              android:background="@drawable/border"
              android:padding="5dp"
              android:layout_gravity="center">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:layout_margin="5dp"
    >
        <TextView
                android:text="Въведете код"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView8" android:textAppearance="@style/title"
                android:gravity="center" android:layout_weight="1"/>
        <TextView
                android:id="@+id/txtclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_weight="8" android:textAppearance="@style/title"/>
    </LinearLayout>
    <TextView
            android:text="Ако нямате такъв, моля свържете се с помощник-дирекцията."
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/textView4" android:layout_weight="1"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:textAppearance="@style/biggrey" android:gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:layout_weight="1"
            style="@style/Base.Widget.MaterialComponents.TextInputEditText" android:textAppearance="@style/biggreen"
            android:textColor="@color/colorPrimary" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:hint="Код"/>
    <Button
            android:text="Въвеждане"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/submit" android:layout_weight="1"
            android:gravity="center" android:layout_gravity="center" android:textAppearance="@style/title_exp"/>

</LinearLayout>


