<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="475dp"
              android:background="@drawable/border"
              android:padding="5dp"
              android:layout_gravity="center" >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1.1">
        <TextView
                android:text="Търсене"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView8" android:textAppearance="@style/title"
                android:gravity="center" android:layout_weight="1"/>
        <TextView
                android:id="@+id/txtclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:layout_gravity="end"
                android:gravity="center|left"
                android:layout_weight="6" android:textAppearance="@style/title" android:layout_marginRight="20dp"/>
    </LinearLayout>

    <Button
            android:id="@+id/search_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Търсене по учител"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textAppearance="@style/title_expandable"
            style="@style/Widget.AppCompat.Button" android:padding="10dp" android:layout_margin="10dp"/>
    <Button
            android:text="Търсене по стая"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/search_room" android:layout_weight="1"
            android:textAppearance="@style/title_expandable"
            style="@style/Widget.AppCompat.Button" android:padding="10dp" android:layout_margin="10dp"/>
    <Button
            android:text="Търсене по клас"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/search_class" android:layout_weight="1"
            android:textAppearance="@style/title_expandable"
            style="@style/Widget.AppCompat.Button" android:padding="10dp" android:layout_margin="10dp"/>
    <Button
            android:text="Търсене на свободна стая"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/extra_act" android:layout_weight="1"
            android:textAppearance="@style/title_expandable"
            style="@style/Widget.AppCompat.Button" android:padding="10dp" android:layout_margin="10dp"/>

</LinearLayout>


