<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="475dp"
              android:background="@drawable/border"
              android:padding="5dp"
              android:layout_gravity="center" >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="Добре дошли в МГ Локация!"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView8" android:textAppearance="@style/title"
                android:gravity="center" android:layout_weight="1"/>
        <TextView
                android:id="@+id/txtclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:layout_gravity="end"
                android:gravity="center|left"
                android:layout_weight="6" android:textAppearance="@style/title"/>
    </LinearLayout>
    <TextView
            android:text="Какво можете да правите тук?"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/textView5" android:layout_weight="1"
            android:gravity="center" android:textAppearance="@style/title" android:textSize="19sp"/>
    <TextView
            android:text="Да разберете програмата на всеки учител/клас/стая!"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/textView21" android:layout_weight="1.1"
            android:textAppearance="@style/biggrey" android:paddingLeft="15dp" android:paddingRight="15dp"/>
    <TextView
            android:text="Да сте винаги информирани за последните събития!"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/textView35" android:layout_weight="1.1"
            android:textAppearance="@style/biggrey" android:paddingLeft="15dp" android:paddingRight="15dp"/>
    <TextView
            android:text="Да изберете извънкласни събития от пълния списък!"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/textView36" android:layout_weight="1.1"
            android:textAppearance="@style/biggrey" android:paddingLeft="15dp" android:paddingRight="15dp"/>
    <TextView
            android:text="Да съобщите проблеми със стаите на администрацията за секунди!"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/textView37" android:layout_weight="1.1"
            android:textAppearance="@style/biggrey" android:paddingLeft="15dp" android:paddingRight="15dp"/>
    <Button
            android:text="Продължете към регистрация ->"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/btn" android:layout_weight="1"
            android:layout_margin="15dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:textAppearance="@style/biggreen"/>

</LinearLayout>


