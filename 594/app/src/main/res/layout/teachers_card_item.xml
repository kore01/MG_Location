            android:textAppearance="@style/smolgrey"
            android:gravity="center"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/teachers_card_subject"/>
    <TextView
            android:id="@+id/teachers_card_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="30"
            android:minLines="1"
