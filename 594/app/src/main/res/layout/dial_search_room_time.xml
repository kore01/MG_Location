<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:background="@drawable/border"
                android:padding="5dp"
                android:layout_gravity="center"
>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="0dp" android:layout_marginEnd="0dp"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="top" android:layout_weight="0.98">
            <TextView
                    android:text="Търсене"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView8"
                    android:textAppearance="@style/title"
                    android:gravity="center" android:layout_weight="1"/>
            <TextView
                    android:id="@+id/txtclose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="X"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:layout_weight="6" android:textAppearance="@style/title"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.08">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    android:ems="10"
                    android:clickable="true"
                    android:hint="Дата" android:gravity="bottom|center" android:text="Ден*"
                    android:textAppearance="@style/biggreen" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="time"
                    android:ems="10"
                    android:hint="Час" android:gravity="bottom|center" android:text="От*"
                    android:textAppearance="@style/biggreen" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="time"
                    android:ems="10"
                    android:hint="Час" android:gravity="bottom|center" android:text="До*"
                    android:textAppearance="@style/biggreen" android:layout_weight="1" android:id="@+id/textView3"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="date"
                    android:ems="10"
                    android:clickable="true"
                    android:id="@+id/date" android:hint="Ден" android:gravity="center"
                    android:textAppearance="@style/txt_expandable" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/time" android:hint="Час" android:gravity="center"
                    android:textAppearance="@style/txt_expandable" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="time"
                    android:ems="10"
                    android:id="@+id/time2" android:hint="Час" android:gravity="center"
                    android:textAppearance="@style/txt_expandable" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/submit"
                android:text="Намери"
                android:textAppearance="@style/title_expandable" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" android:layout_weight="1"
                style="@style/Widget.AppCompat.Button" android:textColor="@color/colorPrimary" android:textSize="17sp"/>
    </LinearLayout>
</RelativeLayout>